@{
}
@model RadiobuttonFormMVC.Models.SignupModel
@using(Html.BeginForm("SignUp","Home",FormMethod.Post))
{
    <b>Username </b>@Html.TextBoxFor(m => m.username)<br /><br />
    <b>Password </b>@Html.PasswordFor(m => m.password)<br /><br />
    <b>Email </b>@Html.TextBoxFor(m => m.email)<br /><br />

    //Radiobutton
    <b>Female </b>@Html.RadioButtonFor(m => m.gender,"Female")
    <b>Male </b>@Html.RadioButtonFor(m => m.gender,"Male")<br />

    //Checkbox
    <b>Dotnet </b>@Html.CheckBoxFor(m => m.subject1,true)
    <b>Java </b>@Html.CheckBoxFor(m => m.subject2,false)<br/><br/>
    
    <form method="post" action="/Home/SignUp">
    
        <input type ="submit" value="check"><br /><br />

    </form>
}

