@model ValidationMessage.Models.UserModel
@using(Html.BeginForm("ValidationSummary","Home",FormMethod.Post))
{
    <table>
        <tr>
            <td>
                <strong>User Name </strong>@Html.TextBoxFor(m => m.UserName)
            </td>
        </tr>
        <tr>
            <td>
                <strong>Mobile </strong>@Html.TextBoxFor(m => m.Mobile)
            </td>
        </tr>
    </table>
    <input type="submit" value="Submit"><br /><br />

    @Html.ValidationSummary(false,"",new{@class = "alert-danger"})<br /><br />

    @*<strong>UserName </strong>@Html.DisplayFor(m => m.UserName)<br />*@
    <strong>UserName </strong>@ViewBag.UserName<br />
